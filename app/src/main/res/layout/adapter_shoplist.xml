<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_shoplist"
    android:layout_width="@dimen/_150dp"
    android:layout_height="@dimen/_150dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="@dimen/_10sp"
    app:cardCornerRadius="@dimen/_10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_shplst"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/image_description"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tc_img2" />

        <TextView
            android:id="@+id/txt_shoplistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxLines="@integer/_int1"
            android:text="@string/headlight"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
