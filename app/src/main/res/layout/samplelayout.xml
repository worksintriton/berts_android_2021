<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_fllist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <RadioButton
            android:id="@+id/rb_5star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_5star"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_4star"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_3star"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_2star"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_1star"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_5stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_black"
            android:padding="@dimen/_5dp"
            android:text="@string/_5_stars"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <RadioButton
            android:id="@+id/rb_4star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_5star4"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_4star4"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_3star4"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_2star4"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_1star4"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_4stars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:padding="@dimen/_5dp"
            android:text="@string/_4_star"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <RadioButton
            android:id="@+id/rb_3star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_5star3"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_4star3"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_3star3"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_2star3"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/img_1star3"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_3stars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:layout_weight="@integer/_int1"
            android:fontFamily="@font/lato_black"
            android:padding="@dimen/_5dp"
            android:text="@string/_3_star"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <RadioButton
            android:id="@+id/rb_2star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_5star2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_4star2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_3star2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/img_2star2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/img_1star2"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_2stars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/_int1"
            android:fontFamily="@font/lato_black"
            android:padding="@dimen/_5dp"
            android:text="@string/_2_stars"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <RadioButton
            android:id="@+id/rb_1star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_5star1"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/img_4star1"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/img_3star1"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/img_2star1"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/img_1star1"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_weight="1"
                android:contentDescription="@string/image_description"
                android:src="@drawable/ic_star_empty" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_1star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_black"
            android:padding="@dimen/_5dp"
            android:text="@string/_1_star"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>

</LinearLayout>