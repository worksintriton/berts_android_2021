<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragment.RetailerRegisterFragment"
    android:background="@color/background_color">


    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/header_layout"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_firstname"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/_int1"
                    android:background="@drawable/rectangle_corner_white_background"
                    android:hint="@string/firstname"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="@integer/_int1"
                    android:padding="@dimen/_15dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/_14sp"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <EditText
                    android:id="@+id/edt_lastname"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_weight="@integer/_int1"
                    android:background="@drawable/rectangle_corner_white_background"
                    android:hint="@string/lastname"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="@integer/_int1"
                    android:padding="@dimen/_15dp"
                    android:textColor="@color/dark_blue"
                    android:textColorHint="@color/light_grey"
                    android:textSize="@dimen/_14sp"
                    tools:ignore="Autofill,LabelFor,TextFields"
                    android:layout_marginLeft="@dimen/_5dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rectangle_corner_white_background"
                android:hint="@string/email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="@integer/_int1"
                android:padding="@dimen/_15dp"
                android:textColor="@color/dark_blue"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/_14sp"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_corner_white_background"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_15dp"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/_14sp"
                        tools:ignore="Autofill,LabelFor" />

                    <ImageView
                        android:id="@+id/img_passwd"
                        android:layout_width="@dimen/_24dp"
                        android:layout_height="@dimen/_24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_5dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/eye" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_cnfm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_cnfm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_corner_white_background"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_15dp"
                        android:textColorHint="@color/light_grey"
                        android:textSize="@dimen/_14sp"
                        tools:ignore="Autofill,LabelFor" />

                    <ImageView
                        android:id="@+id/img_cnfm_passwd"
                        android:layout_width="@dimen/_24dp"
                        android:layout_height="@dimen/_24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_5dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/eye" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_terms"
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:layout_height="wrap_content"
                    android:text="" />

                <TextView
                    android:id="@+id/txt_email_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5dp"
                    android:text="@string/email_coupons"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sp"
                    android:lineSpacingExtra="@dimen/_8sp"
                    android:maxLines="@integer/_int2"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_sigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_corner_yellow_background"
                android:text="@string/reg_retailer"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/txt_terms_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:lineSpacingExtra="@dimen/_8sp"
                android:maxLines="@integer/_int2"
                android:textAlignment="center"
                android:padding="@dimen/_5dp"
                android:text="@string/terms_conditions"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_12sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/txt_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5dp"
                android:text="@string/or"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_register_with_facebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_corner_blue_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_facebk"
                        android:layout_width="@dimen/_24dp"
                        android:layout_height="@dimen/_24dp"
                        android:layout_margin="@dimen/_10dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/facebook" />

                    <Button
                        android:id="@+id/btn_sigin_with_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sigin_with_facebook"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/_14sp" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_30dp"
        android:layout_marginBottom="@dimen/_20dp"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/purple_200" />

</RelativeLayout>