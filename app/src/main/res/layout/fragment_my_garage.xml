<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".retailerfragment.ShopFragment"
    android:background="@color/background_color">


    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:baselineAligned="false"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerView"
        android:layout_below="@+id/headerView"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150dp"
                app:cardBackgroundColor="@color/dark_blue"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_car_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/car_white" />

                    <TextView
                        android:id="@+id/txt_vehc_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10dp"
                        android:fontFamily="@font/lato_black"
                        android:text="@string/add_veh_desc"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sp" />

                    <Button
                        android:id="@+id/btn_addVeh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:background="@drawable/rectangle_corner_yellow_background"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/add_veh_btn_txt"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_14sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txt_list_of_vehicles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="@string/list_of_vehicles"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="@dimen/_20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_vehc_icon"
                            android:layout_width="@dimen/_24dp"
                            android:layout_height="@dimen/_24dp"
                            android:contentDescription="@string/image_description"
                            android:src="@drawable/iconic_car" />

                        <TextView
                            android:id="@+id/txt_select_vehc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:fontFamily="@font/lato_bold"
                            android:padding="@dimen/_2dp"
                            android:text="@string/select_vehicle"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_common"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/txt_select_vehc2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/_2016_bmw_a228i"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/txt_select_vehc3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/_2_0l_xxxxcs_fl_turbo_vin_xasd"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_12sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="@dimen/_20dp"
                                android:layout_marginLeft="@dimen/_20dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:background="@drawable/rectangle_corner_yellow_circle_background"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/img_back"
                                    android:layout_width="@dimen/_20dp"
                                    android:layout_height="@dimen/_20dp"
                                    android:layout_centerInParent="true"
                                    android:contentDescription="@string/image_description"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_feather_edit" />

                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_selveh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:background="@drawable/rectangle_corner_yellow_background"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/select_vehicle"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/dark_blue"
                android:layout_marginTop="@dimen/_20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10dp"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_vehc_icon1"
                            android:layout_width="@dimen/_24dp"
                            android:layout_height="@dimen/_24dp"
                            android:contentDescription="@string/image_description"
                            android:src="@drawable/tick" />

                        <TextView
                            android:id="@+id/txt_select_vehc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:fontFamily="@font/lato_bold"
                            android:padding="@dimen/_2dp"
                            android:text="@string/selected_vehicle1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_common"
                        android:layout_marginBottom="@dimen/_16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/txt_select_vehc21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/_2016_bmw_a228i"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sp" />

                            <TextView
                                android:id="@+id/txt_select_vehc31"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/_2_0l_xxxxcs_fl_turbo_vin_xasd"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="48dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="@dimen/_20dp"
                                android:layout_marginLeft="@dimen/_20dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_10dp"
                                android:background="@drawable/rectangle_corner_yellow_circle_background"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/img_back1"
                                    android:layout_width="@dimen/_20dp"
                                    android:layout_height="@dimen/_20dp"
                                    android:layout_centerInParent="true"
                                    android:contentDescription="@string/image_description"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_feather_edit" />

                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_addVeh1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:background="@drawable/rectangle_corner_yellow_background"
                        android:fontFamily="@font/lato_bold"
                        android:text="@string/select_vehicle"
                        android:textAllCaps="false"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/_14sp"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit_loadingView"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:SpinKit_Color="@color/dark_blue" />

    <LinearLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_30dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:orientation="vertical" />

</RelativeLayout>