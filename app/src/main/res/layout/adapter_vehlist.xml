<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:id="@+id/cv_root"
    android:layout_marginBottom="@dimen/_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10dp"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/dark_blue"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_vehc_icon1"
                        android:layout_width="@dimen/_24dp"
                        android:layout_height="@dimen/_24dp"
                        android:contentDescription="@string/image_description"
                        android:src="@drawable/tick" />

                    <TextView
                        android:id="@+id/txt_select_vehc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/_2dp"
                        android:text="@string/selected_vehicle1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_common"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <TextView
                            android:id="@+id/txt_select_vehc21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/_2016_bmw_a228i"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sp" />

                        <TextView
                            android:id="@+id/txt_select_vehc31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/_2_0l_xxxxcs_fl_turbo_vin_xasd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="@dimen/_20dp"
                            android:layout_marginLeft="@dimen/_20dp"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:background="@drawable/rectangle_corner_yellow_circle_background"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/img_back1"
                                android:layout_width="@dimen/_20dp"
                                android:layout_height="@dimen/_20dp"
                                android:layout_centerInParent="true"
                                android:contentDescription="@string/image_description"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_feather_edit" />

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_addVeh1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/rectangle_corner_yellow_background"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/select_vehicle"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_vehc_icon"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:contentDescription="@string/image_description"
                android:src="@drawable/iconic_car" />

            <TextView
                android:id="@+id/txt_select_vehc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/_2dp"
                android:text="@string/select_vehicle"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_common"
            android:layout_marginBottom="@dimen/_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/txt_select_vehc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/_2016_bmw_a228i"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/txt_select_vehc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/_2_0l_xxxxcs_fl_turbo_vin_xasd"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginLeft="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/rectangle_corner_yellow_circle_background"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/image_description"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_feather_edit" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_selveh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@drawable/rectangle_corner_yellow_background"
            android:fontFamily="@font/lato_bold"
            android:text="@string/select_vehicle"
            android:textAllCaps="false"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_14sp"
            android:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
