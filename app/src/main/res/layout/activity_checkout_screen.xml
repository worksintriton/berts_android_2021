<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_gravity="center"
        android:id="@+id/spin_kit_loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:SpinKit_Color="@color/dark_blue"
        android:visibility="gone"
        style="@style/SpinKitView.Large.Circle"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/_35dp"
                android:layout_height="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:background="@drawable/rectangle_corner_yellow_background">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/back" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/lato_black"
                    android:padding="@dimen/_5dp"
                    android:text="@string/checkout_screen"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/_16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/_35dp"
                android:layout_height="@dimen/_35dp"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/rectangle_corner_yellow_background"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/img_cart"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/cart" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/view19"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow__background" />

        <ScrollView
            android:id="@+id/scrollablContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    app:cardBackgroundColor="@color/white">

                    <RelativeLayout
                        android:id="@+id/cv_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <TextView
                                android:id="@+id/txt_total_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/lato_bold"
                                android:maxLines="@integer/_int1"
                                android:text="@string/order_total_1"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_16sp" />

                            <View
                                android:id="@+id/view17"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:background="@color/background_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/img_product_image"
                                    android:layout_width="@dimen/_100dp"
                                    android:layout_height="@dimen/_100dp"
                                    android:layout_marginLeft="@dimen/_10dp"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_marginEnd="@dimen/_20dp"
                                    android:layout_marginRight="@dimen/_10dp"
                                    android:layout_marginBottom="@dimen/_10dp"
                                    android:contentDescription="@string/image_description"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/primg3" />

                                <TextView
                                    android:id="@+id/txt_product_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_20dp"
                                    android:layout_toEndOf="@+id/img_product_image"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_bold"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/k_metal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_14sp" />

                                <TextView
                                    android:id="@+id/txt_parts_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_product_name"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_toEndOf="@+id/img_product_image"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_regular"
                                    android:lineSpacingExtra="@dimen/_8sp"
                                    android:maxLines="@integer/_int2"
                                    android:text="@string/parts_name"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_12sp" />

                                <!--		<RatingBar-->
                                <!--			android:id="@+id/ratingBar"-->
                                <!--			style="@style/Widget.AppCompat.RatingBar.Small"-->
                                <!--			android:layout_width="wrap_content"-->
                                <!--			android:layout_height="wrap_content"-->
                                <!--			android:layout_below="@+id/txt_parts_name"-->
                                <!--			android:layout_marginTop="@dimen/_10dp"-->
                                <!--			android:layout_toEndOf="@+id/img_product_image"-->
                                <!--			android:numStars="5"-->
                                <!--			android:rating="4" />-->

                                <TextView
                                    android:id="@+id/txt_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/txt_parts_name"
                                    android:layout_alignParentEnd="false"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_toEndOf="@id/img_product_image"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_regular"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/price"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_12sp" />

                                <TextView
                                    android:id="@+id/txt_prod_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/txt_parts_name"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_marginEnd="@dimen/_10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_regular"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/x_1"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_12sp" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/view16"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:background="@color/background_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10dp"
                                    android:orientation="horizontal"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        android:id="@+id/img_deliveryaddr"
                                        android:layout_width="@dimen/_35dp"
                                        android:layout_height="@dimen/_35dp"
                                        android:contentDescription="@string/image_description"
                                        android:src="@drawable/location"
                                        tools:ignore="TooDeepLayout" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_deliveryaddrtype"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_10dp"
                                            android:fontFamily="@font/lato_black"
                                            android:text="@string/sample"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/_16sp" />

                                        <TextView
                                            android:id="@+id/txt_deliveryaddr"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_10dp"
                                            android:layout_marginTop="@dimen/_5dp"
                                            android:fontFamily="@font/lato_bold"
                                            android:text="@string/sample_adrar_algeria"
                                            android:textColor="@color/light_grey"
                                            android:textSize="@dimen/_12sp" />
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/txt_deliveryaddrchange"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_gravity="end"
                                            android:layout_marginStart="@dimen/_10dp"
                                            android:layout_marginTop="@dimen/_5dp"
                                            android:fontFamily="@font/lato_bold"
                                            android:text="@string/change"
                                            android:textColor="@color/dark_blue"
                                            android:textSize="@dimen/_12sp" />
                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                            <View
                                android:id="@+id/view18"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:background="@color/background_color" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginBottom="@dimen/_10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10dp"
                                    android:orientation="horizontal"
                                    tools:ignore="UseCompoundDrawables">

                                    <ImageView
                                        android:id="@+id/img_ship"
                                        android:layout_width="@dimen/_35dp"
                                        android:layout_height="@dimen/_35dp"
                                        android:contentDescription="@string/image_description"
                                        android:src="@drawable/shiptruck" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txt_shippingaddrtype"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_10dp"
                                            android:fontFamily="@font/lato_black"
                                            android:text="@string/cod"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/_16sp" />

                                        <TextView
                                            android:id="@+id/txt_shippingaddrtime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_10dp"
                                            android:layout_marginTop="@dimen/_5dp"
                                            android:fontFamily="@font/lato_bold"
                                            android:text="@string/_24_hours"
                                            android:textColor="@color/light_grey"
                                            android:textSize="@dimen/_12sp" />
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/txt_shipaddrchange"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_gravity="end"
                                            android:layout_marginStart="@dimen/_10dp"
                                            android:layout_marginTop="@dimen/_5dp"
                                            android:fontFamily="@font/lato_bold"
                                            android:text="@string/choose"
                                            android:textColor="@color/dark_blue"
                                            android:textSize="@dimen/_12sp" />
                                    </RelativeLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginTop="@dimen/_20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        tools:ignore="UseCompoundDrawables">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_order_total_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:fontFamily="@font/lato_black"
                                android:text="@string/order_total"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_16sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt_order_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="end"
                                android:layout_marginStart="@dimen/_10dp"
                                android:fontFamily="@font/lato_bold"
                                android:text="@string/price"
                                android:textColor="@color/dark_blue"
                                android:textSize="@dimen/_16sp" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:layout_marginTop="@dimen/_20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        tools:ignore="UseCompoundDrawables">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_coupon_apply_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:fontFamily="@font/lato_black"
                                android:text="@string/coupons"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_16sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/txt_select_coupon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="@dimen/_10dp"
                                    android:fontFamily="@font/lato_regular"
                                    android:text="@string/select_code"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_14sp"
                                    tools:ignore="RelativeOverlap" />

                                <ImageView
                                    android:id="@+id/img_arrow1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10dp"
                                    android:layout_marginEnd="@dimen/_10dp"
                                    android:layout_toEndOf="@id/txt_select_coupon"
                                    android:contentDescription="@string/image_description"
                                    android:src="@drawable/ic_smallright"
                                    tools:ignore="TooDeepLayout" />
                            </RelativeLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_100dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10dp"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_payment_method_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10dp"
                                    android:fontFamily="@font/lato_black"
                                    android:text="@string/payment"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_16sp" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="UselessParent">

                                    <TextView
                                        android:id="@+id/txt_payment_method"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:fontFamily="@font/lato_regular"
                                        android:text="@string/select_payment_method"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/_14sp"
                                        tools:ignore="RelativeOverlap" />

                                    <ImageView
                                        android:id="@+id/img_arrow2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_marginEnd="@dimen/_10dp"
                                        android:layout_toEndOf="@id/txt_payment_method"
                                        android:contentDescription="@string/image_description"
                                        android:src="@drawable/ic_smallright"
                                        tools:ignore="TooDeepLayout" />
                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <View android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_margin="@dimen/_10dp"
                            android:background="@color/background_color"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginEnd="@dimen/_10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/txt_merch_subtotal_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_bold"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/merchandise_subtotal"
                                    android:textColor="@color/lighter_grey"
                                    android:textSize="14sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/txt_merch_subtotal_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="@dimen/_10dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/lato_regular"
                                        android:maxLines="@integer/_int1"
                                        android:text="@string/price"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="14sp" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/txt_shipp_subtotal_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_bold"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/txt_orders_label"
                                    android:textColor="@color/lighter_grey"
                                    android:textSize="14sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/txt_ship_subtotal_value"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="@dimen/_10dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/lato_bold"
                                        android:maxLines="@integer/_int1"
                                        android:text="@string/price"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="14sp" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/txt_discount_total_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_bold"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/discount_subtotal"
                                    android:textColor="@color/lighter_grey"
                                    android:textSize="14sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/txt_dis_total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="@dimen/_10dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/lato_regular"
                                        android:maxLines="@integer/_int1"
                                        android:text="@string/_58_00"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="14sp" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/_10dp"
                                tools:ignore="TooManyViews,UselessParent">

                                <TextView
                                    android:id="@+id/txt_total_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/lato_bold"
                                    android:maxLines="@integer/_int1"
                                    android:text="@string/total_amount"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="16sp"
                                    tools:ignore="TooManyViews" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    tools:ignore="TooManyViews">

                                    <TextView
                                        android:id="@+id/txt_total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginTop="@dimen/_10dp"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/lato_bold"
                                        android:maxLines="@integer/_int1"
                                        android:text="@string/_58_00"
                                        android:textColor="@color/red"
                                        android:textSize="16sp" />
                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_productlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:fabAlignmentMode="center"
        app:fabCradleVerticalOffset="@dimen/_0dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconTint="@color/selector"
            app:itemRippleColor="@android:color/white"
            app:itemTextColor="@color/selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/buttom_navigation_items"
            tools:ignore="TooManyViews" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_description"
        android:visibility="gone"
        app:backgroundTint="@color/dark_blue"
        app:layout_anchor="@+id/bottomBar"
        app:tint="@null" />

    <RelativeLayout
        android:id="@+id/footerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:background="@drawable/rectangle_corner_light_yellow_background"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_checkout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:text="@string/proceed_to_buy"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_18sp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
